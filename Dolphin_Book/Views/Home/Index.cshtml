@model HomeVM
@section link {
    <link rel="stylesheet" href="~/assets/css/homePage.css">
}

@section script {
    <script src="~/assets/js/homePage.js"></script>
    <script src="~/assets/js/custom.js"></script>
}

<section class="slider-sec">
    <!-- Slideshow container -->
    <div class="slideshow-container">
        
        @foreach(var item in Model.slides)
        {
            <div class="mySlides fade">
                <div class="numbertext"></div>
                <img src="~/admin/img/images/@item.Image" style="width:100%; height:374px;">
            </div>
            
        }
        <!-- Next and previous buttons -->
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
    <br>

    <!-- The dots/circles -->
    <div style="text-align:center">
        <span class="dot" onclick="currentSlide(1)"></span>
        <span class="dot" onclick="currentSlide(2)"></span>
        <span class="dot" onclick="currentSlide(3)"></span>
    </div>
</section>
<section class="type-sec">
    <div class="sales-type" id="sales-type-id">
        <ul>
            <li>Günün təklifi</li>
            <span class="underline"></span>
        </ul>
        <ul>
            <li>Çox Satılanlar</li>
            <span class="underline"></span>
        </ul>
        <ul>
            <li>Yeni Çıxanlar</li>
            <span class="underline"></span>
        </ul>
        <span></span>
    </div>
</section>
<section class="first-owl-crsl-sec">
    <div class="carousel-wrapper">

        <div class="owl-carousel owl-theme">
            @foreach(var item in Model.books)
            {

                
                    <div class="item" id="book-carousel-first">
                <a asp-controller="book" asp-action="bookdetails" asp-route-id="@item.Id" style="text-decoration: none; color: black;">
                        <div class="book-carousel-image">
                            <img style="width: 150px; height: 230px; object-fit: cover;" src="~/admin/img/images/@item.Image" alt="">
                        </div>
                        <div class="book-carousel-detail">
                            <h5>@item.Author.FullName</h5>
                            <p>@item.Name</p>
                            <h5>@item.SalePrice<span> ₼</span></h5>
                        </div>

                </a>
                        <div class="basket-button">

                            <button id="addToBookBasket" data-id="@item.Id" data-type="@item.ProductType?.Type" data-count="@item.StockCount"><p>Səbətə at</p></button>
                        </div>

                    </div>

                
            }
        </div>
    </div>
</section>
<section class="last-owl-crsl-sec">
    <div class="carousel-wrapper">

        <h2>Oyuncaqlar</h2>
        <div class="owl-carousel owl-theme">
            @foreach(var item in Model.Toys)
            {
            <div id="toy-carousel" class="item" style="margin-top: 25px; margin-bottom: 25px; padding: 10px 20px 0px 15px;">
                <div class="toy-carousel-image">
                    <img style="width: 150px; height: 230px; object-fit: cover; display: inline-block;" src="~/admin/img/images/@item.toyImages.FirstOrDefault(x=>x.isMain).Image" alt="">
                </div>
                <div class="toy-carousel-detail">
                    <h5>@item.Publisher.Name</h5>
                    <p>@item.Name</p>
                        <h5>@item.SalePrice<span> ₼</span></h5>
                </div>
                <div class="toy-basket-button">

                        <button id="addToBookBasket" data-id="@item.Id" data-type="@item.ProductType?.Type" data-count="@item.StockCount"><p>Sebətə at</p></button>
                </div>
            </div>
                

            }
        </div>
    </div>
</section>